<header class="slidePanel-header">
    <div class="slidePanel-actions" aria-label="操作" role="group">
        <div class="btn-group actions-bottom" role="group">
            <div class="pull-left" style="position:relative;">
                <button type="button" class="btn btn-icon btn-pure btn-inverse dropdown-toggle icon wb-more-horizontal" data-toggle="dropdown" aria-expanded="false" aria-hidden="true"></button>
                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                    <li><a href="javascript:;"><i class="icon wb-inbox" aria-hidden="true"></i> 归档</a></li>
                    <li><a href="javascript:;"><i class="icon wb-alert-circle" aria-hidden="true"></i> 标为垃圾邮件</a></li>
                    <li><a href="javascript:;"><i class="icon wb-trash" aria-hidden="true"></i> 删除</a></li>
                    <li><a href="javascript:;"><i class="icon wb-print" aria-hidden="true"></i> 打印</a></li>
                </ul>
            </div>
            <button type="button" class="btn btn-icon btn-pure btn-inverse icon wb-chevron-left" aria-hidden="true"></button>
            <button type="button" class="btn btn-icon btn-pure btn-inverse icon wb-chevron-right" aria-hidden="true"></button>
        </div>
        <button type="button" class="btn btn-icon btn-pure btn-inverse slidePanel-close actions-top icon wb-close" aria-hidden="true"></button>

    </div>
    <h4 class="stage-name mailbox-panel-title"></h4>
</header>
<div class="slidePanel-inner">
    <div class="slidePanel-main"></div>
    <div class="slidePanel-messages"></div>
    <div class="slidePanel-comment">
        <textarea class="maxlength-textarea form-control mb-sm margin-bottom-20" rows="4"></textarea>
        <button class="btn btn-primary" data-dismiss="modal" type="button">回复</button>
    </div>
</div>
